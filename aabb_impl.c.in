#include "aabb_impl.h"

#include <assert.h>

#define mush_aabb_get_idx           MUSHSPACE_CAT(mush_aabb,_get_idx)
#define mush_aabb_get_idx_no_offset MUSHSPACE_CAT(mush_aabb,_get_idx_no_offset)

static size_t mush_aabb_get_idx_no_offset(const mush_aabb* aabb, mushcoords c)
{
	size_t i = c.x;
#if MUSHSPACE_DIM >= 2
	i += aabb->width * c.y;
#if MUSHSPACE_DIM >= 3
	i += aabb->area  * c.z;
#endif
#endif
	return i;
}
static size_t mush_aabb_get_idx(const mush_aabb* aabb, mushcoords c) {
	return mush_aabb_get_idx_no_offset(aabb, mushcoords_sub(c, aabb->beg));
}

mush_aabb mush_aabb_make(mushcoords b, mushcoords e) {
	for (unsigned i = 0; i < MUSHSPACE_DIM; ++i)
		assert (b.v[i] <= e.v[i]);

	mush_aabb aabb = mush_aabb_make_unsafe(b, e);
	mush_aabb_finalize(&aabb);
	return aabb;
}

mush_aabb mush_aabb_make_unsafe(mushcoords b, mushcoords e) {
	return (mush_aabb){.beg = b, .end = e};
}

void mush_aabb_finalize(mush_aabb* aabb) {
	aabb->size = aabb->end.x - aabb->beg.x + 1;

#if MUSHSPACE_DIM >= 2
	aabb->width = aabb->size;
	aabb->size *= aabb->end.y - aabb->beg.y + 1;
#endif
#if MUSHSPACE_DIM >= 3
	aabb->area  = aabb->size;
	aabb->size *= aabb->end.z - aabb->beg.z + 1;
#endif
}

bool mush_aabb_contains(const mush_aabb* aabb, mushcoords c) {
	return mushcoords_contains(c, aabb->beg, aabb->end);
}
mushcell mush_aabb_get(const mush_aabb* aabb, mushcoords c) {
	assert (mush_aabb_contains(aabb, c));
	return aabb->data[mush_aabb_get_idx(aabb, c)];
}
