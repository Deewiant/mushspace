#ifndef MUSH_CONFIG_H
#define MUSH_CONFIG_H

#ifndef MUSHSPACE_93
#define MUSHSPACE_93 0
#endif

#if '@DISABLE_ALL_ASSERTIONS@' == 'y'
#define NDEBUG
#endif

#if '@INFINITE_LOOP_DETECTION@' == 'y'
#define MUSH_ENABLE_INFINITE_LOOP_DETECTION
#endif

#if '@EXPENSIVE_DEBUGGING@' == 'y'
#define MUSH_ENABLE_EXPENSIVE_DEBUGGING
#if '@DISABLE_ALL_ASSERTIONS@' == 'y'
#error EXPENSIVE_DEBUGGING conflicts with DISABLE_ALL_ASSERTIONS!
#elif defined(NDEBUG)
#error EXPENSIVE_DEBUGGING conflicts with NDEBUG!
#endif
#endif

#if @CELL_SIZE@ == 0
#define MUSH_CELL_IS_LONG
#elif @CELL_SIZE@ == 32
#define MUSH_CELL_IS_32_BIT
#elif @CELL_SIZE@ == 64
#define MUSH_CELL_IS_64_BIT
#else
#error CONFIG_CELL_SIZE setting is incorrect!
#endif

#if defined(__GNUC__)
#define MUSH_PACKED_STRUCT     struct __attribute__((__packed__))
#define MUSH_PACKED_STRUCT_END
#else
#define MUSH_PACKED_STRUCT \
   _Pragma("pack(push)") \
   _Pragma("pack(1)") \
   struct
#define MUSH_PACKED_STRUCT_END _Pragma("pack(pop)")
#endif

#if defined(__GNUC__)
#define MUSH_ALWAYS_INLINE __attribute__((__always_inline__))
#elif defined(_MSC_VER)
#define MUSH_ALWAYS_INLINE __forceinline
#else
#define MUSH_ALWAYS_INLINE
#endif

